<Window x:Class="Parking_Car.Wondows.Parking_Records.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parking_Car.Wondows.Drivers"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="labelName" Content="Vehicle Plate"></Label>
            <ComboBox x:Name="VehicleComboBox" IsEditable="True" Margin="10" />

            <Label x:Name="labelLast" Content="Slot Number"></Label>
            <ComboBox x:Name="SlotComboBox" IsEditable="True" Margin="10" />

            <Label x:Name="asd" Content="Time IN (HH:MM) 24-hour"></Label>
            <TextBox x:Name="TimeINTextBox" Margin="10" />

            <Label x:Name="labelphone" Content="ParCode"></Label>
            <TextBox x:Name="ParcodeTextBox" Margin="10" />
            
            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="10" />
            <Button x:Name="AddButton" Content="Add" Click="AddButton_Click" Margin="10" />

        </StackPanel>
    </Grid>
</Window>
