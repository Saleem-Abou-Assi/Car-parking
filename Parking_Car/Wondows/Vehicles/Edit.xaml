<Window x:Class="Parking_Car.Wondows.Vehicles.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parking_Car.Wondows.Vehicles"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="PlateNum" Content="Plate Number"></Label>
            <TextBox x:Name="PlateTextBox" Margin="10" />

            <Label x:Name="VType" Content="Type" />
            <ComboBox x:Name="TypeComboBox" Margin="10">
                <ComboBoxItem Content="متور" />
                <ComboBoxItem Content="سيارة" />
                <ComboBoxItem Content="متوركهربا" />
            </ComboBox>

            <Label x:Name="DriverName" Content="Driver Full Name"></Label>
            <TextBox x:Name="DriverNameTextBox" Margin="10" />

            <Label x:Name="Desc" Content="Description"></Label>
            <TextBox x:Name="DescriptionTextBox" Margin="10" />


            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="10" />
            <Button x:Name="AddButton" Content="Save" Click="AddButton_Click" Margin="10" />

        </StackPanel>
    </Grid>
</Window>
